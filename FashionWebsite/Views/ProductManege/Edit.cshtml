                <h2 class="title1">Chi Tiết Sản Phẩm</h2>
                <div class="form-three widget-shadow">
                    <div data-example-id="form-validation-states">
                        @using (Html.BeginForm("Edit", "ProductManege", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            <input type="text" name="ID" value="@Model.ID" hidden />
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Tên Sản Phẩm</label>
                                <input type="text" class="form-control" name="NAME" placeholder="Tên Sản Phẩm" value="@Model.NAME">
                            </div>
                            <div class="form-group">
                                <label>Thương Hiệu:</label>
                                @Html.DropDownList("TRADEMARKID", null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Danh mục:</label>
                                @Html.DropDownList("CATEGORYID", null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Giới Tính: </label>
                                @Html.DropDownList("GENDERID", null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Giá Bán</label>
                                <input type="text" class="form-control" name="PRICE" placeholder="Giá Bán" value="@Model.PRICE">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Giá khuyến mãi</label>
                                <input type="text" class="form-control" name="PROMOTIONPRICE" placeholder="Giá Khuyến Mãi" value="@Model.PROMOTIONPRICE.Value.ToString("#,##")">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Hình Ảnh 1</label>
                                <img src="@Url.Content("~/Content/images/"+Model.IMAGE1)" style="height:200px;width:200px" />
                                <input type="text" name="IMAGE1" value="@Model.IMAGE1" hidden />
                                <input type="file" name="ImageUpload" id="Image1Add" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Hình Ảnh 2</label>
                                <img src="@Url.Content("~/Content/images/"+Model.IMAGE2)" style="height:200px;width:200px" />
                                <input type="text" name="IMAGE2" value="@Model.IMAGE2" hidden />
                                <input type="file" name="ImageUpload" id="Image1Add" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Hình Ảnh 3</label>
                                <img src="@Url.Content("~/Content/images/"+Model.IMAGE3)" style="height:200px;width:200px" />
                                <input type="text" name="IMAGE3" value="@Model.IMAGE3" hidden />
                                <input type="file" name="ImageUpload" id="Image1Add" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Hình Ảnh 4</label>
                                <img src="@Url.Content("~/Content/images/"+Model.IMAGE4)" style="height:200px;width:200px" />
                                <input type="text" name="IMAGE4" value="@Model.IMAGE4" hidden />
                                <input type="file" name="ImageUpload" id="Image1Add" />
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Mô Tả</label>
                                <input type="text" class="form-control" name="DESCRIPTION" placeholder="Mô Tả" value="@Model.DESCRIPTION">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Hiển thị trang chủ</label>
                                <input type="checkbox" class="form-control" name="HOMEFLAG" value="@Model.HOMEFLAG">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Sản phẩm hot</label>
                                <input type="checkbox" class="form-control" name="HOTFLAG" value="@Model.HOTFLAG">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Số Lượt Xem</label>
                                <input type="text" class="form-control" name="VIEWCOUNT" placeholder="Số Lượt Xem" value="@Model.VIEWCOUNT" readonly>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Số Lần Comment</label>
                                <input type="text" class="form-control" name="COMMENTCOUNT" placeholder="Số Lần Comment" value="@Model.COMMENTCOUNT" readonly>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Số Lượt Mua</label>
                                <input type="text" class="form-control" name="PURCHASECOUNT" placeholder="Số Lượt Mua" value="@Model.PURCHASECOUNT" readonly>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Sản Phẩm Mớis</label>
                                <input type="text" class="form-control" name="ISNEW" placeholder="Sản Phẩm Mới" value="@Model.ISNEW">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Kích hoạt</label>
                                @if (Model.ISACTIVE == true)
                                {
                                    <input type="checkbox" class="form-control" name="ISACTIVE" checked value="true">
                                }
                                else
                                {

                                    <input type="checkbox" class="form-control" name="ISACTIVE" value="false">
                                }
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Cập Nhật Lần Cuối</label>
                                <input type="text" class="form-control" name="LASTUPDATEDATE" placeholder="Cập Nhật Lần Cuối" value="@Model.LASTUPDATEDATE">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Thông Tin Thêm</label>
                                <input type="text" class="form-control" name="MOREINFORMATION" placeholder="Thông Tin Thêm" value="@Model.MOREINFORMATION">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Thông Tin Bảo Hành</label>
                                <input type="text" class="form-control" name="WARRANTYINFORMATION" placeholder="Thông Tin Bảo Hành" value="@Model.WARRANTYINFORMATION">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="inputSuccess1">Giảm Giá</label>
                                <input type="text" class="form-control" name="DISCOUNT" placeholder="Giảm Giá" value="@Model.DISCOUNT">
                            </div>
                            <input type="submit" value="Lưu" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
