<!-- /new_arrivals -->
<div class="sale-w3ls">
    <div class="container">
        <h6 style="color:black">Giảm Giá Cực Mạnh</h6>
        <a class="hvr-outline-out button2" href="@Url.Action("Men","Product")" style="color:black">Trang Sản Phẩm</a>
    </div>
    <div class="new_arrivals_agile_w3ls_info" style="background-color:white;">
        <div class="container">
            <h3 class="wthree_text_info"><span>Hàng mới về</span></h3>
            <div id="horizontalTab">
                <ul class="resp-tabs-list">
                    <li>Nam</li>
                    <li>Nữ</li>
                </ul>
                <div class="resp-tabs-container">
                    <!--/tab_one-->
                    <div class="tab1">
                        @foreach (var item in menproducts)
                        {
                            <div class="col-md-3 product-men" style="height:370px;width:250px">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <img src="@Url.Content("~/Content/images/" + item.IMAGE1)" alt="" class="pro-image-front">
                                        <img src="@Url.Content("~/Content/images/" + item.IMAGE2)" alt="" class="pro-image-back">
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@Url.Action("Detail", "Product", new { ID = item.ID })" class="link-product-add-cart">Xem chi tiết</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">-@item.DISCOUNT%</span>

                                    </div>
                                    <div class="item-info-product ">
                                        <h4><a href="@Url.Action("Detail","Product",new { ID=item.ID})">@item.NAME</a></h4>
                                        <div class="info-product-price">
                                            @{decimal price = item.PRICE.Value - ((item.PRICE.Value * item.DISCOUNT.Value) / 100);}
                                            <span class="item_price">@price.ToString("#,##") VNĐ</span>
                                            <del>@item.PRICE.Value.ToString("#,##") VNĐ</del>
                                        </div>
                                        <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
                                            @using (Html.BeginForm("AddItemcart", "Cart", FormMethod.Get))
                                            {

                                                <fieldset>
                                                    <input type="hidden" name="id" value="@item.ID" />
                                                    <input type="submit" name="submit" value="Đưa vào giỏ hàng" class="button" />
                                                </fieldset>

                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                        <div class="clearfix"></div>
                    </div>
                    <!--//tab_one-->
                    <!--/tab_two-->
                    <div class="tab2">
                        @foreach (var item in womenproducts)
                        {
                            <div class="col-md-3 product-men" style="height:370px;width:250px">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <img src="@Url.Content("~/Content/images/"+item.IMAGE1)" alt="" class="pro-image-front">
                                        <img src="@Url.Content("~/Content/images/"+item.IMAGE2)" alt="" class="pro-image-back">
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@Url.Action("Detail","Product",new { ID=item.ID})" class="link-product-add-cart">Xem chi tiết</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">-@item.DISCOUNT%</span>
                                    </div>
                                    <div class="item-info-product ">
                                        <h4><a href="@Url.Action("Detail","Product",new {ID=item.ID})">@item.NAME</a></h4>
                                        <div class="info-product-price">
                                            @{decimal price = item.PRICE.Value - ((item.PRICE.Value * item.DISCOUNT.Value) / 100);}
                                            <span class="item_price">@price.ToString("#,##") VNĐ</span>
                                            <del>@item.PRICE.Value.ToString("#,##") VNĐ</del>
                                        </div>
                                        <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
                                            @using (Html.BeginForm("AddItemcart", "Cart", FormMethod.Get))
                                            {

                                                <fieldset>
                                                    <input type="hidden" name="id" value="@item.ID" />
                                                    <input type="submit" name="submit" value="Đưa vào giỏ hàng" class="button" />
                                                </fieldset>

                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                        <div class="clearfix"></div>
                    </div>
                    <!--//tab_two-->
                </div>
            </div>
        </div>
    </div>
